{
  "compilerOptions": {
    "strictFunctionTypes": true,
    "types": ["node", "jest"],
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "target": "es2015",
    "lib": ["es2015", "dom", "esnext.asynciterable"],
    "plugins": [],
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["*.ts", "*.tsx", "Form/**/*"],
  "exclude": [
      "node_modules",
      "dist"
    ]
}
